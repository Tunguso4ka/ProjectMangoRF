<Window x:Class="ProgectMangoRF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgectMangoRF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="White"
        Title="RandomFights"
        Height="720"
        Width="1280"
        MinHeight="720"
        MinWidth="1280"
        MaxHeight="1440"
        MaxWidth="2560"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Name="TabBar" Height="20">
            <Button FontFamily="Segoe MDL2 Assets" Content="" Style="{StaticResource TabBarButtonLight}" Click="Button_Click" Tag="Info" Name="InfoBtn"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="" Style="{StaticResource TabBarButtonLight}" Click="Button_Click" Tag="Minimize" Name="MiniBtn"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="" Style="{StaticResource TabBarButtonLight}" Click="Button_Click" Tag="Maximize" Name="MaxiBtn"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="" Style="{StaticResource TabBarButtonLight}" Click="Button_Click" Tag="Close" Name="CloseBtn"/>
        </StackPanel>
        <Frame HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="Frame0"/>
    </StackPanel>
</Window>
